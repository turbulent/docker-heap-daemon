[supervisord]
nodaemon=true
logfile=/vol/logs/{{HOSTNAME}}-supervisord.log

[unix_http_server]
file=/var/run/supervisor.sock
chmod=0700

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

[supervisorctl]
serverurl=unix:///var/run/supervisor.sock

[program:program]
command=/run-program.sh
autorestart=true
stdout_events_enabled=true
stderr_events_enabled=true
stdout_logfile=/vol/logs/{{HOSTNAME}}-program.log
stderr_logfile=/vol/logs/{{HOSTNAME}}-program.log
umask=002
priority=1

{%- if VAR_WATCH %}
[program:watcher]
command=/run-watcher.sh
autorestart=true
priority=2
{%- endif -%}

{%- if VAR_SSL %}
[program:nginx]
command=/run-nginx.sh
autorestart=true
priority=3
{%- endif -%}

[program:nullmailer]
command=/run-nullmailer.sh
stdout_logfile=/vol/logs/{{HOSTNAME}}-nullmailer.log
stderr_logfile=/vol/logs/{{HOSTNAME}}-nullmailer.log
priority=3